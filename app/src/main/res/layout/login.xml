<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/a1"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/userName"
        android:hint="Phone or Email"
        android:layout_marginTop="10dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:textColor="@color/bannerText"
        android:inputType="text"

        android:maxLength="20"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/passWord"
        android:hint="PassWord"
        android:layout_marginTop="5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" android:textColor="@color/bannerText" android:inputType="textPassword"
        android:autoText="false"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:id="@+id/checkBox"
            android:layout_weight="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:id="@+id/checkBox2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:checked="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/buttonTos"
            android:textColor="@color/bannerText"
            android:layout_weight="1"
            tools:targetApi="honeycomb" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            tools:targetApi="honeycomb" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

</LinearLayout>

